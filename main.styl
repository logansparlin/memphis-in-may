@font-face {
	font-family: 'RockwellStd-Bold';
	src: url('../fonts/rockwell.eot');
	src: url('../fonts/rockwell.eot?#iefix') format('embedded-opentype'),
		 url('../fonts/rockwell.woff2') format('woff2'),
		 url('../fonts/rockwell.woff') format('woff'),
		 url('../fonts/rockwell.ttf') format('truetype');}
 

@font-face {
    font-family: 'franchise-bold';
    src: url('../fonts/franchise-bold-webfont.eot');
    src: url('../fonts/franchise-bold-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/franchise-bold-webfont.woff2') format('woff2'),
         url('../fonts/franchise-bold-webfont.woff') format('woff'),
         url('../fonts/franchise-bold-webfont.ttf') format('truetype'),
         url('../fonts/franchise-bold-webfont.svg#franchiseregular') format('svg');
    font-weight: normal;
    font-style: normal;
}
@font-face {
  font-family: 'brush-regular';
  src: url('../fonts/Brush738BT-RegularA.eot?#iefix') format('embedded-opentype'),  url('../fonts/Brush738BT-RegularA.woff') format('woff'), url('../fonts/Brush738BT-RegularA.ttf')  format('truetype'), url('../fonts/Brush738BT-RegularA.svg#Brush738BT-RegularA') format('svg');
  font-weight: normal;
  font-style: normal;
}

$tan = #bba06b
$gold = #9c7e22


body
	margin 0
	padding 0
	background url('http://frenchsfoodservice.com/styles/images/container-bg.png') no-repeat center center
	background-size cover
p 
	font-family 'arial'
#right-column
	width 730px
	min-width 730px
	margin 0 auto
	font-family 'franchise-bold'
	-webkit-font-smoothing antialiased
	-moz-font-smoothing antialiased
	-ms-font-smoothing antialiased
	font-smoothing antialiased
	.headline_container
		height auto
		width 100%
		position relative
		background url('../img/MIM_BGImage.jpg') no-repeat center center
		h2 
			width 100%
			text-transform uppercase
			text-align center
			font-size 3.2em
			line-height 1em
			color white 
			z-index 2
			margin 0
			text-shadow 2px 2px 10px rgba(0, 0, 0, 1) 
			padding-bottom 30px
			padding-top 10px
			.brush 
				color $tan
	.bbq-biggest-stage
		width auto
		height auto
		top 0
		box-sizing border-box
		text-align center
	.brush 
		font-family 'brush-regular'
		text-transform none
	h2 
		text-transform uppercase 
		text-align center
		font-size 2.5em
		margin 0.5em 0
		margin-bottom 10px
		.brush 
			color $gold
	.intro-copy
		font-weight bold
		font-size 1.3em
		line-height 1.4em
		text-align center
		padding 0 40px
		margin 0
		margin-top 1em
		font-family 'RockwellStd-Bold'
		-webkit-font-smoothing subpixel-antialiased
		font-smoothing subpixel-antialiased
	.content-container
		padding 0 20px
	.divider 
		overflow hidden
		text-align center
		font-size 30px
		margin 0.5em auto
		position relative
		clear both
		&:before, &:after 
			background $gold
			content ''
			display inline-block
			height 2px 
			position relative
			vertical-align middle
			width 50%
		&:before
			right 0.5em
			margin-left -50%
		&:after 
			left 0.5em
			margin-right -50%
		img 
			margin 0 auto
			width auto
			height auto
			text-align center
	
	.article-container 
		float left
		display block 
		height auto
		margin 1.5em 0
		.thumbnail-image 
			width 40% 
			float left
			background grey
			height 175px
			position relative
			overflow visible
			border 6px solid white
			border-radius 5px
			-webkit-box-shadow rgba(0, 0, 0,0.3) 0 0 10px
			-moz-box-shadow rgba(0, 0, 0,0.3) 0 0 10px
			box-shadow rgba(0, 0, 0,0.3) 0 0 10px
			&.grand_champion
				background url('../img/grand_champion.jpg') no-repeat
				background-size cover
				background-position bottom center
			&.epic_bbq
				background url('../img/epic_bbq.jpg') no-repeat
				background-size cover
			&.contest_innovations
				background url('../img/contest_innovations.jpg') no-repeat
				background-size cover
			&.crowd
				background url('../img/crowd.jpg') no-repeat
				background-size cover
			&.bottles
				background url('../img/bottles.jpg') no-repeat
				background-size cover
				background-position bottom center
		.article 
			width 55% 
			float right
			h3 
				margin 0
				margin-bottom 5px
				text-transform uppercase 
				color $gold
				font-size 1.4em
			p 
				margin 0
				font-size 14px
				line-height 18px
				
.signoff 
	padding 20px 0
	a 
		color $gold
		
.r-ball 
	font-size 60%
